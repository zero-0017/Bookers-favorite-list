<h2>いいねした投稿一覧</h2>
<% if @favorite_books.present? %>
<table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
     <% @favorite_books.each do |book|%>
      <tr>
        <td><%= image_tag @user.get_profile_image, size: '50x50' %></td>
        <td><%= link_to @user.name , @user, class: "user_#{@user.id}" %></td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td class="favorite_buttons_<%= book.id %>">
          <%= render 'favorites/favorite', book: book %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  ユーザーはいません
<% end %>